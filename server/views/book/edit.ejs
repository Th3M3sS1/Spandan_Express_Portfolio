<!--BODY SECTION-->
<div class="text-center">
    <h3 style="margin-top: 10px;font-weight: bold;">Change the Details of the Book</h3>
    <form method="POST">
        <input type="text" id="nameTextField" name="name" placeholder="Enter Book Name" value="<%= book.name %>" required>
        <br>
        <input type="text" id="authorTextField" name="author" placeholder="Enter Author of the Book" value="<%= book.author %>" required>
        <br>
        <input type="text" id="publishedYearTextField" name="published_year" placeholder="Enter Release Year of the Book" value="<%= book.published_year %>" required>
        <br>
        <input type="text" id="genreTextField" name="genre" placeholder="Enter Genre of the Book" value="<%= book.genre %>" required>
        <br>
        <input type="text" id="priceTextField" name="price" placeholder="Enter Price of the Book" value="<%= book.price %>" required>
        <br>

        <div class="info-link-black">          
           <button type="submit">Apply Changes in Book</button>
        </div>  

        <br>
        <div class="info-link-black">          
            <a href="/book-list">Cancel</a>
         </div> 
    </form>
</div>

